/* miniprogram/pages/detail/detail.wxss */
.detailContainer{
  display: flex;
  flex-direction: column;
}
.headerImg{
  width: 100%;
  height: 460rpx;
}
.music{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 10rpx;
  right: 10rpx;
}
.avatar_date{
  padding: 10rpx;
}
.avatar_date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.avatar_date text{
  font-size: 32rpx;
}
.title{
  margin-left: 10rpx;
  font-size: 40rpx;
  font-weight: 700;
  margin:0 10rpx 10rpx;
}
.content{
  font-size: 32rpx;
  text-indent: 32rpx;
}
.collection_share_container{
  position: relative;
}
.collection_share{
  float: right;
  margin-right: 50rpx;
}
.collection_share image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}
.line{
  width: 90%;
  height: 1px;
  background: #eee;
  position: absolute;
  top: 45rpx;
  left: 5%;
  z-index: -1;
}
button{
  background: darkgray;
  width: 200rpx;
  height: 80rpx;
  margin: 10rpx 0;
}